<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <androidx.cardview.widget.CardView
                    android:id="@+id/IMAGE_CARDVIEW"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="30dp"
                    android:transitionName="profileExpand"
                    app:cardCornerRadius="50dp"

                    app:layout_constraintBottom_toTopOf="@+id/main_block_account"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/USER_IMAGE"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_baseline_profile_image_24" />

                </androidx.cardview.widget.CardView>

                <RelativeLayout
                    android:id="@+id/main_block_account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/IMAGE_CARDVIEW">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:text="Name"

                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/USER_NAME"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/name"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"

                        android:hint="----------"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAlignment="inherit"

                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/scholar_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/USER_NAME"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="Scholar Id"

                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/SCHOLAR_ID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/scholar_id"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"

                        android:hint="----------"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAlignment="inherit"

                        android:textSize="19dp" />


                    <TextView
                        android:id="@+id/email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/SCHOLAR_ID"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="Email"

                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/EMAIL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"

                        android:hint="----------"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAlignment="inherit"

                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/EMAIL"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="Phone No."

                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/PHONE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/phone"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"

                        android:hint="----------"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAlignment="inherit"

                        android:textSize="19dp" />

                    <TextView
                        android:id="@+id/hostel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/PHONE"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="10dp"
                        android:text="Hostel No."

                        android:textSize="10dp" />

                    <TextView
                        android:id="@+id/HOSTEL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/hostel"
                        android:layout_marginLeft="50dp"
                        android:layout_marginTop="7dp"
                        android:layout_marginRight="50dp"

                        android:hint="----------"
                        android:paddingLeft="10dp"
                        android:paddingTop="8dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="8dp"
                        android:text=""
                        android:textAlignment="inherit"

                        android:textSize="19dp" />


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/first_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/main_block_account" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10sp"
                    android:gravity="center"

                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/first_button">

                    <Button
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_rectangle"
                        android:text="Items On Sale" />

                    <Button
                        android:layout_width="180sp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20sp"
                        android:background="@drawable/rounded_rectangle"
                        android:text="Sold Items" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="215dp"
                    android:layout_marginBottom="70dp"
                    android:src="@drawable/edit"
                    app:layout_constraintBottom_toTopOf="@+id/main_block_account"
                    app:layout_constraintStart_toStartOf="@+id/IMAGE_CARDVIEW" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>